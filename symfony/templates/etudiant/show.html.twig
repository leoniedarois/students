{% extends 'base.html.twig' %}

{% block title %}Etudiant{% endblock %}

{% block body %}
    <h1 class="h1Style mb-3">Etudiant : {{ etudiant.firstname }} {{ etudiant.lastname }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ etudiant.id }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ etudiant.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ etudiant.lastname }}</td>
            </tr>
            <tr>
                <th>Age</th>
                <td>{{ etudiant.age }} ans</td>
            </tr>
            <tr>
                <th>Moyenne</th>
                <td>{{ etudiant.getProjectMoyenne() }}/20</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex">
        <a class="btn btn-outline-dark mr-2" href="{{ path('etudiant_index') }}">Retour</a>
        <a class="btn btn-secondary mr-2" href="{{ path('etudiant_edit', {'id': etudiant.id}) }}">Modifier</a>
        {{ include('etudiant/_delete_form.html.twig') }}
    </div>

{% endblock %}
