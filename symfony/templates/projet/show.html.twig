{% extends 'base.html.twig' %}

{% block title %}Projet{% endblock %}

{% block body %}
    <h1 class="h1Style">Projet : {{ projet.name }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ projet.id }}</td>
            </tr>
            <tr>
                <th>Name </th>
                <td>{{ projet.name }}</td>
            </tr>
            <tr>
                <th>Note </th>
                <td>{{ projet.note }}/20</td>
            </tr>
            <tr>
                <th>Matiere </th>
                <td>{{ projet.matiere.name }}</td>
            </tr>
            <tr>
                <th>Etudiant(s) </th>
                <td>
                    {% for etudiant in projet.etudiants %}
                        <li>{{ etudiant.firstname }} {{ etudiant.lastname }}</li>
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>
    <div class="d-flex">
        <a class="btn btn-outline-dark mr-2" href="{{ path('projet_index') }}">Retour</a>
        <a class="btn btn-secondary mr-2" href="{{ path('projet_edit', {'id': projet.id}) }}">Modifier</a>
        {{ include('projet/_delete_form.html.twig') }}
    </div>
{% endblock %}
