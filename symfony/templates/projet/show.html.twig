{% extends 'base.html.twig' %}

{% block title %}Projet{% endblock %}

{% block body %}
    <h1>Projet</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ projet.id }}</td>
            </tr>
            <tr>
                <th>Name :</th>
                <td>{{ projet.name }}</td>
            </tr>
            <tr>
                <th>Note :</th>
                <td>{{ projet.note }}</td>
            </tr>
            <tr>
                <th>Matiere :</th>
                <td>{{ projet.matiere.name }}</td>
            </tr>
            <tr>
                <th>Etudiants :</th>
                {% for etudiant in projet.etudiants %}
                    <td>{{ etudiant.firstname }}</td>
                {% endfor %}
            </tr>

        </tbody>
    </table>

    <a href="{{ path('projet_index') }}">back to list</a>

    <a href="{{ path('projet_edit', {'id': projet.id}) }}">edit</a>

    {{ include('projet/_delete_form.html.twig') }}
{% endblock %}
