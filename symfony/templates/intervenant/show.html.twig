{% extends 'base.html.twig' %}

{% block title %}Intervenant{% endblock %}

{% block body %}
    <h1 class="h1Style">Intervenant : {{ intervenant.firstname }} {{ intervenant.lastname }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ intervenant.id }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ intervenant.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ intervenant.lastname }}</td>
            </tr>
            <tr>
                <th>Age</th>
                <td>{{ intervenant.age }} ans</td>
            </tr>
            <tr>
                <th>Matiere(s)</th>
                <td>
                    {% for matiere in intervenant.matieres %}
                        <li>{{ matiere.name }}</li>
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>
    <div class="d-flex">
        <a class="btn btn-outline-dark mr-2" href="{{ path('intervenant_index') }}">Retour</a>
        <a class="btn btn-secondary mr-2" href="{{ path('intervenant_edit', {'id': intervenant.id}) }}">Modifier</a>
        {{ include('intervenant/_delete_form.html.twig') }}
    </div>
{% endblock %}
