{% extends 'base.html.twig' %}

{% block title %}Matiere{% endblock %}

{% block body %}
    <h1 class="h1Style">Matiere : {{ matiere.name }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ matiere.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ matiere.name }}</td>
            </tr>
            <tr>
                <th>Intervenant</th>
                <td>
                    {% if matiere.intervenant %}
                        <li>{{ matiere.intervenant.firstname}} {{ matiere.intervenant.lastname}}</li>
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Projet(s) associ√©(s)</th>
                <td>
                    {% for projet in matiere.projets %}
                        <li>{{ projet.name}}</li>
                    {% endfor %}
                </td>
            </tr>

        </tbody>
    </table>
    <div class="d-flex">
        <a class="btn btn-outline-dark mr-2" href="{{ path('matiere_index') }}">Retour</a>
        <a class="btn btn-secondary mr-2" href="{{ path('matiere_edit', {'id': matiere.id}) }}">Modifier</a>
        {{ include('matiere/_delete_form.html.twig') }}
    </div>
{% endblock %}
